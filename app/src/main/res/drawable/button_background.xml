<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1565C0"/> <!-- Color más oscuro para el estado presionado -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Estado por defecto -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Color por defecto para el botón -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
