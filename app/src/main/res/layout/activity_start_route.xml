<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black"
    tools:context=".StartRouteActivity">

    <!-- Definición del FrameLayout con el identificador mapContainer -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="384dp"
        android:layout_height="571dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


    </FrameLayout>

    <Button
        android:id="@+id/btnStartRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/button_background"
        android:onClick="onStartRecordingClick"
        android:text="Comenzar Grabación"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnNewRoute"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnStartRecording"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/button_background"
        android:onClick="onNewRouteClick"
        android:text="Nueva Ruta"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/mapTypeSpinner"
        android:layout_width="164dp"
        android:layout_height="54dp"
        android:layout_marginEnd="140dp"
        android:entries="@array/map_types" />


    <!-- ... (otros elementos) -->

</RelativeLayout>
